{
  "name": "token-allocation-distributor",
  "version": "0.0.1",
  "description": "Distribute allocated ERC20 tokens based on set conditions",
  "main": "truffle-config.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build-contracts": "sol-merger \"./contracts/*.sol\" ./build",
    "lint": "./node_modules/.bin/eslint test/*.js",
    "lint:fix": "./node_modules/.bin/eslint test/*.js --fix",
    "test": "truffle test 'test/!(withVestingContract.js)' && npm run test:vesting",
    "test:vesting": "truffle test test/withVestingContract.js",
    "test:dev": "truffle test test/tokenDistributor.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chronologic/token-allocation-distributor.git"
  },
  "keywords": [
    "ethereum",
    "erc20",
    "allocator",
    "vesting",
    "eac",
    "ethereum-alarm-clock"
  ],
  "author": "adibas03@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chronologic/token-allocation-distributor/issues"
  },
  "homepage": "https://github.com/chronologic/token-allocation-distributor#readme",
  "devDependencies": {
    "eslint": "5.5.0",
    "sol-merger": "^0.1.2",
    "truffle": "4.1.14"
  }
}
